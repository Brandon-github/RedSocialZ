<div class="post">
    {% include "@components/posts/user.twig" %}

    {% if post.isSecret %}
        <p class="post-description opacity:1">
            {{post.description}}
        </p>
        <button class="post-lock" onclick="MicroModal.show('modal-1');">
            <i data-icon="lock"></i>
            Desbloquear
        </button>
    {% else %}
        <a href="{{BASE_URL}}p/{{hashid(post.id)}}">
            <p class="post-description">
                {{post.content}}
            </p>
        </a>
    {% endif %}
    
    {% include "@components/posts/buttons.twig" %}
</div>